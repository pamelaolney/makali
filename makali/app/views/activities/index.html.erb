<br>
<div class="activities">

<h2>Check out this list of things to do</h2>

<br>
<%= form_for [@user, @activity] do |f| %>

<%= f.label :title %>
<%= f.text_field :title %>


<%= f.submit :submit %>
<% end %>


<br>
<% @activities.each do |activity| %>
  <% if @current_user %>
    <div class="activelist">
      <%=  activity.title %>
      <% if activity.user.id == @current_user.id %>
      <p id="edit">
        <%= link_to '(edit)', edit_activity_path(activity) %>
      </p>
      <% end %>
    </div>
  <% else %>
  <div class="activelist">
    <%=  activity.title %>
  </div>
  <% end %>
<% end %>
</div>
